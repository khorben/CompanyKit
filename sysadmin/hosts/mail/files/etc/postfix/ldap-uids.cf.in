server_host = auth.@@DOMAIN@@
version = 3
bind = yes
bind_dn = uid=@@LDAP_POSTFIX_USERNAME@@,ou=@@LDAP_SYSTEM_OU@@,@@LDAP_SUFFIX@@
bind_pw = @@LDAP_POSTFIX_PASSWORD@@
search_base = ou=@@LDAP_USERS_OU@@,@@LDAP_SUFFIX@@
query_filter = (&(mail=%s)(objectClass=CourierMailAccount))
scope = one
result_attribute = uidNumber
